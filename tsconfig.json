{
  "compilerOptions": {
    "target": "es2016",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
  },
  "include": [
    "./src/**/*",
  ],
}
